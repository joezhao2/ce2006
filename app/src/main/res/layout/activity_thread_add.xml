<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreadAddActivity"
    android:background="#A7C7E7">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:text="ADD A NEW THREAD"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        />
    <EditText
        android:id="@+id/threadadd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:hint="Add thread"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#ffffff"
        android:drawablePadding="20dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/useradd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/threadadd2"
        android:hint="Thread body text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#ffffff"
        android:drawablePadding="20dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submitCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFD700"
        android:onClick="onSubmitClickThread2"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/useradd2"/>

</androidx.constraintlayout.widget.ConstraintLayout>